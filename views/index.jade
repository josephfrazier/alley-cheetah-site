extends layout

block content
  h1= title
  p Welcome to #{title}
  button(onclick='autofillDemo()') fill in the form with demo values from Cranksgiving 11

  form(action='/users' method='post')
    input(type='text', name='origin', id='origin' placeholder='origin')

    input(type='text', name='destination', id='destination' placeholder='destination')

    label(for='row1')
      p Waypoints:
    table
      thead
        tr
          th
          th 1
          th 2
          th 3
          th 4
          th 5
      tr
        th A
        td
          input(type='text', name='row1', id='a1')
        td
          input(type='text', name='row1', id='a2')
        td
          input(type='text', name='row1', id='a3')
        td
          input(type='text', name='row1', id='a4')
        td
          input(type='text', name='row1', id='a5')
      tr
        th B
        td
          input(type='text', name='row2', id='b1')
        td
          input(type='text', name='row2', id='b2')
        td
          input(type='text', name='row2', id='b3')
        td
          input(type='text', name='row2', id='b4')
        td
          input(type='text', name='row2', id='b5')
      tr
        th C
        td
          input(type='text', name='row3', id='c1')
        td
          input(type='text', name='row3', id='c2')
        td
          input(type='text', name='row3', id='c3')
        td
          input(type='text', name='row3', id='c4')
        td
          input(type='text', name='row3', id='c5')
      tr
        th D
        td
          input(type='text', name='row4', id='d1')
        td
          input(type='text', name='row4', id='d2')
        td
          input(type='text', name='row4', id='d3')
        td
          input(type='text', name='row4', id='d4')
        td
          input(type='text', name='row4', id='d5')
      tr
        th E
        td
          input(type='text', name='row5', id='e1')
        td
          input(type='text', name='row5', id='e2')
        td
          input(type='text', name='row5', id='e3')
        td
          input(type='text', name='row5', id='e4')
        td
          input(type='text', name='row5', id='e5')
    input(type='submit')

  script.
    function autofillDemo () {
      const origin = 'Hudson Yards Park'
      const destination = '440 Grand St'

      // https://farm3.static.flickr.com/2778/4134507221_d0c9ec1b7c_o.jpg
      const grid = [
        ['221-225 8th Ave, 10011', '907 8th Ave, NYC', '289 Columbus Ave, NYC', '25 University Pl, NYC'],
        ['512 2nd Ave, NYC', '452 W 43rd St., NYC', '1407 Lexington Ave, NYC', '316 Greenwich St, NYC'],
        ['311 E 23rd St, NYC', '580 9th Ave, NYC', '2704 Broadway, NYC', '5 St. James Pl, NYC'],
        ['10 Union Sq. East, NYC', '225 W. 57th St, NYC', '609 Columbus Ave, NYC', '2217 7th Ave, NYC']
      ]

      var $ = s => document.querySelector(s)

      $('#origin').value = 'Hudson Yards Park'
      $('#destination').value = '440 Grand St'

      $('#a1').value = grid[0][0]
      $('#a2').value = grid[0][1]
      $('#a3').value = grid[0][2]
      $('#a4').value = grid[0][3]

      $('#b1').value = grid[1][0]
      $('#b2').value = grid[1][1]
      $('#b3').value = grid[1][2]
      $('#b4').value = grid[1][3]

      $('#c1').value = grid[2][0]
      $('#c2').value = grid[2][1]
      $('#c3').value = grid[2][2]
      $('#c4').value = grid[2][3]

      $('#d1').value = grid[3][0]
      $('#d2').value = grid[3][1]
      $('#d3').value = grid[3][2]
      $('#d4').value = grid[3][3]
    }

